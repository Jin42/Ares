@inherits ViewPage<FilesByTagResponse>

@{
    Layout = "Browse_de";
}

<h3>Datenbasis bezüglich Tags durchsuchen</h3>

<p>Derzeit sind @Model.Results.Count Musikstücke in der Datenbasis für den Tag @Model.Tag.</p>

<table>
    <thead><tr><th>Name</th><th>Artist</th><th>Album</th></tr></thead>
    <tbody>
        @foreach (var file in Model.Results)
        {
            <tr>
                <td><a href="@file.Url">@file.Name</a></td>
                <td><a href="@file.ArtistUrl">@file.Artist</a></td>
                <td><a href="@file.AlbumUrl">@file.Album</a></td>
            </tr>
        } 
    </tbody>
</table>
