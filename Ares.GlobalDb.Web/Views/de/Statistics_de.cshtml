@inherits ViewPage<StatisticsResponse>

@{
    Layout = "Browse_de";
}

<h3>Statistiken</h3>

<h4>Aktuelle Zahlen der Datenbasis</h4>

<p>Die Datenbasis enthält derzeit:</p>

<ul>
    <li class="statistics"><span class="statistics">@Model.FilesCount</span> <a href="@Model.FilesUrl">Musikstücke</a> von <span class="statistics">@Model.ArtistsCount</span> <a href="@Model.ArtistsUrl">Künstlern</a> in <span class="statistics">@Model.AlbumsCount</span> <a href="@Model.AlbumsUrl">Alben</a></li>
    <li class="statistics"><span class="statistics">@Model.TagsCount</span> <a href="@Model.TagsUrl">Tags</a> in <span class="statistics">@Model.CategoriesCount</span> <a href="@Model.CategoriesUrl">Kategorien</a></li>
    <li class="statistics">Durchschnittlich <span class="statistics">@String.Format("{0:0.0}", Model.AvgTagsPerFile)</span> Tags pro Musikstück</li>
    <li class="statistics">Beiträge von <span class="statistics">@Model.UsersCount</span> Benutzern</li>
</ul>

<h4>Download-Statistiken</h4>

<table class="statistics">
    <thead><tr><th class="statisticsFirst">Zeitraum</th><th class="statistics"># Anfragen</th><th class="statistics"># gesuchte Titel</th><th class="statistics"># gefundene Titel</th><th class="statisticsLast">% gefundene Titel</th></tr></thead>
    <tbody>
        <tr><td class="statisticsFirst">Heute</td><td class="statistics">@Model.DownloadStats.Today.NrOfDownloads</td><td class="statistics">@Model.DownloadStats.Today.NrOfRequestedFiles</td><td class="statistics">@Model.DownloadStats.Today.NrOfFoundFiles</td><td class="statisticsLast">@String.Format("{0:0.0}", Model.DownloadStats.Today.PercentFoundFiles)</td></tr>
        <tr><td class="statisticsFirst">Letzte Woche</td><td class="statistics">@Model.DownloadStats.LastWeek.NrOfDownloads</td><td class="statistics">@Model.DownloadStats.LastWeek.NrOfRequestedFiles</td><td class="statistics">@Model.DownloadStats.LastWeek.NrOfFoundFiles</td><td class="statisticsLast">@String.Format("{0:0.0}", Model.DownloadStats.LastWeek.PercentFoundFiles)</td></tr>
        <tr><td class="statisticsFirst">Dieser Monat</td><td class="statistics">@Model.DownloadStats.LastMonth.NrOfDownloads</td><td class="statistics">@Model.DownloadStats.LastMonth.NrOfRequestedFiles</td><td class="statistics">@Model.DownloadStats.LastMonth.NrOfFoundFiles</td><td class="statisticsLast">@String.Format("{0:0.0}", Model.DownloadStats.LastMonth.PercentFoundFiles)</td></tr>
        <tr><td class="statisticsFirst">Dieses Jahr</td><td class="statistics">@Model.DownloadStats.LastYear.NrOfDownloads</td><td class="statistics">@Model.DownloadStats.LastYear.NrOfRequestedFiles</td><td class="statistics">@Model.DownloadStats.LastYear.NrOfFoundFiles</td><td class="statisticsLast">@String.Format("{0:0.0}", Model.DownloadStats.LastYear.PercentFoundFiles)</td></tr>
    </tbody>
</table>

<h4>Upload-Statistiken</h4>

<table class="statistics">
    <thead><tr><th class="statisticsFirst">Zeitraum</th><th class="statistics"># Anfragen</th><th class="statistics"># hinzugefügte Musikstücke</th><th class="statisticsLast"># hinzugefügte Tags</th></tr></thead>
    <tbody>
        <tr><td class="statisticsFirst">Heute</td><td class="statistics">@Model.UploadStats.Today.NrOfUploads</td><td class="statistics">@Model.UploadStats.Today.NrOfNewFiles</td><td class="statisticsLast">@Model.UploadStats.Today.NrOfNewTags</td></tr>
        <tr><td class="statisticsFirst">Letzte Woche</td><td class="statistics">@Model.UploadStats.LastWeek.NrOfUploads</td><td class="statistics">@Model.UploadStats.LastWeek.NrOfNewFiles</td><td class="statisticsLast">@Model.UploadStats.LastWeek.NrOfNewTags</td></tr>
        <tr><td class="statisticsFirst">Dieser Monat</td><td class="statistics">@Model.UploadStats.LastMonth.NrOfUploads</td><td class="statistics">@Model.UploadStats.LastMonth.NrOfNewFiles</td><td class="statisticsLast">@Model.UploadStats.LastMonth.NrOfNewTags</td></tr>
        <tr><td class="statisticsFirst">Dieses Jahr</td><td class="statistics">@Model.UploadStats.LastYear.NrOfUploads</td><td class="statistics">@Model.UploadStats.LastYear.NrOfNewFiles</td><td class="statisticsLast">@Model.UploadStats.LastYear.NrOfNewTags</td></tr>
    </tbody>
</table>