@inherits ViewPage<TagsByCategoryResponse>

@{
    Layout = "Browse_de";
}

<h3>Datenbasis bezüglich Kategorien durchsuchen</h3>

<p>Derzeit sind @Model.Results.Count Tags in der Datenbasis für die Kategorie @Model.Category.</p>

<table>
    <thead><tr><th>Name</th><th>Kategorie</th></tr></thead>
    <tbody>
        @foreach (var tag in Model.Results)
        {
            <tr>
                <td><a href="@tag.Url">@tag.Name</a></td>
                <td><a href="@tag.CategoryUrl">@tag.Category</a></td>
            </tr>
        } 
    </tbody>
</table>