@inherits ViewPage<AllTagsResponse>

@{
    Layout = "Browse";
}

<h3>Browsing database by Tag</h3>

<p>There are currently @Model.Results.Count tags in the database.</p>

<table>
    <thead><tr><th>Name</th><th>Category</th></tr></thead>
    <tbody>
        @foreach (var tag in Model.Results)
        {
            <tr>
                <td><a href="@tag.Url">@tag.Name</a></td>
                <td><a href="@tag.CategoryUrl">@tag.Category</a></td>
            </tr>
        } 
    </tbody>
</table>

@section Languages {
    @Html.Partial("Languages", Model.LanguageResponse)
}
