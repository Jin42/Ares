<?xml version="1.0" encoding="UTF-8" ?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:my="http://schemas.android.com/apk/res-auto">
  <PreferenceCategory android:title="@string/folders">
  	<Ares.Player_Android.FolderPreference android:key="musicFolder" android:title="@string/musicDir" my:folderType="Music" />
  	<Ares.Player_Android.FolderPreference android:key="soundFolder" android:title="@string/soundDir" my:folderType="Sounds" />
  	<Ares.Player_Android.FolderPreference android:key="projectFolder" android:title="@string/projectDir" my:folderType="Projects" />
  </PreferenceCategory>
  <PreferenceCategory android:title="@string/connection">
  	<Ares.Player_Android.PortPreference android:key="udpPort" android:title="@string/udpPort" android:defaultValue="8009" my:portType="udp" />
  	<Ares.Player_Android.PortPreference android:key="tcpPort" android:title="@string/tcpPort" android:defaultValue="11112" my:portType="tcp" />
  	<EditTextPreference android:key="playerName" android:title="@string/playerName" android:defaultValue="Android Player" />
  </PreferenceCategory>
</PreferenceScreen>

